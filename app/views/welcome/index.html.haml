:css
  html, body {
    height: 100%;
    font-family: font-family: "Roboto", helvetica, arial, sans-serif;
    text-align: center;
  }

  h1 {
    margin-top: 5%;
    font-size: 3rem;
    display: inline-block;
  }
  h1 div {
    position: relative;
    float: left;
  }
  h1 div:first-child {
    color: #3498db;
    margin-right: 1rem;
  }

  p {
    font-size: 1.2rem;
    color: gray;
  }

  .delay-1 {
    -moz-animation-delay: 1s;
    -webkit-animation-delay: 1s;
    animation-delay: 1s;
  }
  .cover{
    height: 280px;
    width: 100%;
    background-color: #F9F9F9;
    overflow:auto;
    margin:auto;
  }
  .cover-photo{
    height:280px;
  }

  footer {
    position:absolute;
    color: #bbb;
    bottom: 2rem;
    width: 100%;
  }

